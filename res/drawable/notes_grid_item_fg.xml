<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="bottom" android:id="@id/notes_grid_item_bottom_dim" android:height="@dimen/notes_grid_item_fg_dim_height" android:bottom="@dimen/notes_grid_item_fg_dim_bottom">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/basic_list_item_bg_color" android:endColor="@android:color/transparent" android:angle="90.0" android:type="linear" />
        </shape>
    </item>
    <item>
        <ripple android:color="@color/list_ripple_color">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/notes_grid_item_radius" />
                    <solid android:color="?android:colorAccent" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>
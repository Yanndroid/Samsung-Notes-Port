<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <ripple android:color="@color/candidate_tags_selected_ripple_color">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="#ff000000" />
                    <corners android:radius="@dimen/tag_editor_candidate_tag_radius" />
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <inset>
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/tag_editor_candidate_tag_radius" />
                <stroke android:width="2.0px" android:color="@color/tag_editor_candidate_stroke_color_unselected" />
            </shape>
        </inset>
    </item>
</layer-list>
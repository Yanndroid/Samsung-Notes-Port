<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="#ffefefef" />
            <size android:height="@dimen/composer_hw_toolbar_ripple_size" android:width="@dimen/composer_hw_toolbar_ripple_size" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="true">
        <ripple android:color="#1a000000">
            <item android:id="@android:id/mask">
                <shape android:shape="oval">
                    <solid android:color="#ffefefef" />
                    <size android:height="@dimen/composer_hw_toolbar_ripple_size" android:width="@dimen/composer_hw_toolbar_ripple_size" />
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="#b2d9d9d9" />
            <size android:height="@dimen/composer_hw_toolbar_ripple_size" android:width="@dimen/composer_hw_toolbar_ripple_size" />
        </shape>
    </item>
</selector>
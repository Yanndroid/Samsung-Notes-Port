<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/composer_floating_toolbar_background" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_pressed="true">
                <ripple android:color="@color/composer_default_button_color">
                    <item android:id="@android:id/mask">
                        <shape android:shape="oval">
                            <solid android:color="@color/composer_floating_toolbar_item_pressed_state_bg_color" />
                        </shape>
                    </item>
                </ripple>
            </item>
        </selector>
    </item>
</layer-list>
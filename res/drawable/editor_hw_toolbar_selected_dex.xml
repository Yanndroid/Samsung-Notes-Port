<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="#26000000" />
            <size android:height="@dimen/composer_hw_toolbar_ripple_size" android:width="@dimen/composer_hw_toolbar_ripple_size" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="true">
        <ripple android:color="@color/composer_default_button_color">
            <item android:id="@android:id/mask">
                <shape android:shape="oval">
                    <solid android:color="#26000000" />
                    <size android:height="@dimen/composer_hw_toolbar_ripple_size" android:width="@dimen/composer_hw_toolbar_ripple_size" />
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="#26000000" />
            <size android:height="@dimen/composer_hw_toolbar_ripple_size" android:width="@dimen/composer_hw_toolbar_ripple_size" />
        </shape>
    </item>
</selector>